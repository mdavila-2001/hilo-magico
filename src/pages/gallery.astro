---
// src/pages/gallery.astro

// Importamos los componentes
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Metadatos para SEO
const tituloPagina = 'Gallery - Hilo Mágico';
const descripcionPagina = 'Explora nuestra galería de trabajos personalizados y descubre la calidad de nuestras prendas hechas a mano con amor y dedicación.';
---

<BaseLayout title={tituloPagina} description={descripcionPagina}>
  <!-- Header -->
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="hero hero--small">
      <div class="contenedor">
        <h1 class="hero__titulo">Nuestra Galería</h1>
        <p class="hero__subtitulo">Descubre nuestras creaciones más recientes</p>
      </div>
    </section>
    
    <!-- Galería de Trabajos -->
    <section class="seccion">
      <div class="contenedor">
        <div class="seccion__encabezado">
          <h2 class="seccion__titulo">Nuestros Trabajos</h2>
          <p class="seccion__subtitulo">Algunas de nuestras creaciones más recientes</p>
        </div>
        
        <!-- Filtros de Galería -->
        <div class="filtros-galeria">
          <button class="filtro-galeria activo" data-categoria="todos">Todos</button>
          <button class="filtro-galeria" data-categoria="vestidos">Vestidos</button>
          <button class="filtro-galeria" data-categoria="blusas">Blusas</button>
          <button class="filtro-galeria" data-categoria="faldas">Faldas</button>
          <button class="filtro-galeria" data-categoria="conjuntos">Conjuntos</button>
          <button class="filtro-galeria" data-categoria="personalizados">Personalizados</button>
        </div>
        
        <div class="galeria-grid">
          <!-- Item 1 -->
          <div class="galeria-item" data-categoria="vestidos">
            <div class="galeria-item__contenedor">
              <img 
                src="/images/placeholder-1.jpg" 
                alt="Vestido de Verano" 
                class="galeria-item__imagen" 
                loading="lazy"
              />
              <div class="galeria-item__overlay">
                <div class="galeria-item__contenido">
                  <h3 class="galeria-item__titulo">Vestido de Verano</h3>
                  <p class="galeria-item__descripcion">Vestido floreado con detalles en encaje</p>
                  <span class="galeria-item__categoria">Vestidos</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Item 2 -->
          <div class="galeria-item" data-categoria="blusas">
            <div class="galeria-item__contenedor">
              <img 
                src="/images/placeholder-2.jpg" 
                alt="Blusa Elegante" 
                class="galeria-item__imagen" 
                loading="lazy"
              />
              <div class="galeria-item__overlay">
                <div class="galeria-item__contenido">
                  <h3 class="galeria-item__titulo">Blusa Elegante</h3>
                  <p class="galeria-item__descripcion">Blusa de seda con detalles en la espalda</p>
                  <span class="galeria-item__categoria">Blusas</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Item 3 -->
          <div class="galeria-item" data-categoria="conjuntos">
            <div class="galeria-item__contenedor">
              <img 
                src="/images/placeholder-3.jpg" 
                alt="Conjunto Casual" 
                class="galeria-item__imagen" 
                loading="lazy"
              />
              <div class="galeria-item__overlay">
                <div class="galeria-item__contenido">
                  <h3 class="galeria-item__titulo">Conjunto Casual</h3>
                  <p class="galeria-item__descripcion">Conjunto de dos piezas en tonos pastel</p>
                  <span class="galeria-item__categoria">Conjuntos</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Item 4 -->
          <div class="galeria-item" data-categoria="vestidos">
            <div class="galeria-item__contenedor">
              <img 
                src="/images/placeholder-4.jpg" 
                alt="Vestido de Noche" 
                class="galeria-item__imagen" 
                loading="lazy"
              />
              <div class="galeria-item__overlay">
                <div class="galeria-item__contenido">
                  <h3 class="galeria-item__titulo">Vestido de Noche</h3>
                  <p class="galeria-item__descripcion">Elegante vestido largo para ocasiones especiales</p>
                  <span class="galeria-item__categoria">Vestidos</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Item 5 -->
          <div class="galeria-item" data-categoria="faldas">
            <div class="galeria-item__contenedor">
              <img 
                src="/images/placeholder-5.jpg" 
                alt="Falda Plisada" 
                class="galeria-item__imagen" 
                loading="lazy"
              />
              <div class="galeria-item__overlay">
                <div class="galeria-item__contenido">
                  <h3 class="galeria-item__titulo">Falda Plisada</h3>
                  <p class="galeria-item__descripcion">Falda midi con pliegues y cintura alta</p>
                  <span class="galeria-item__categoria">Faldas</span>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Item 6 -->
          <div class="galeria-item" data-categoria="personalizados">
            <div class="galeria-item__contenedor">
              <img 
                src="/images/placeholder-6.jpg" 
                alt="Top con Volados" 
                class="galeria-item__imagen" 
                loading="lazy"
              />
              <div class="galeria-item__overlay">
                <div class="galeria-item__contenido">
                  <h3 class="galeria-item__titulo">Top con Volados</h3>
                  <p class="galeria-item__descripcion">Top con detalles en volados y espalda descubierta</p>
                  <span class="galeria-item__categoria">Personalizados</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Sección de CTA -->
    <section class="seccion seccion--oscura">
      <div class="contenedor">
        <h2 class="seccion__titulo">¿Te gustaría algo similar?</h2>
        <p class="seccion__subtitulo">Contáctanos para realizar un pedido personalizado</p>
        <div class="text-center">
          <a href="/contacto" class="boton boton--primario">Solicitar Presupuesto</a>
        </div>
      </div>
    </section>
  </main>
  
  <!-- Script para el filtrado de la galería -->
  <script>
    // Importar la función de inicialización
    import { initGallery } from '../scripts/gallery';
    
    // Inicializar la galería cuando el DOM esté listo
    document.addEventListener('astro:page-load', () => {
      initGallery();
    });
  </script>
</BaseLayout>

<!-- Estilos específicos de la página de galería -->
<style lang="scss" is:global>
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;
  @use '../styles/components/gallery';
</style>
