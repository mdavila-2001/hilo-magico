---
// src/pages/test.astro
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/main.scss';
---

<BaseLayout title="Pruebas de Componentes">
  <main class="container">
    <h1>Pruebas de Componentes</h1>
    
    <section class="test-section">
      <h2>Logo SVG</h2>
      
      <div class="test-component">
        <h3>Logo por defecto</h3>
        <div class="logo-container">
        </div>
        
        <h3>Logo para Header (más pequeño)</h3>
        <div class="logo-container">
        </div>
        
        <h3>Logo para Footer (más grande)</h3>
        <div class="logo-container">
        </div>
        
        <h3>Logo con tamaño personalizado</h3>
        <div class="logo-container">
        </div>
      </div>
    </section>
    
    <section class="test-section">
      <h2>Componentes del Carrito</h2>
      
      <!-- Botón de prueba para el carrito -->
      <div class="test-component">
        <h3>Botón de Carrito</h3>
        <button class="header__carrito-btn" aria-label="Ver carrito">
          <i class="fas fa-shopping-cart"></i>
          <span class="header__carrito-contador" id="contador-carrito">0</span>
        </button>
      </div>
      
      <!-- Tarjeta de producto de prueba -->
      <div class="test-component">
        <h3>Tarjeta de Producto</h3>
        <article class="producto">
          <div class="producto__imagen-contenedor">
            <img 
              src="/placeholder-product.jpg" 
              alt="Producto de prueba" 
              class="producto__imagen"
              width="300"
              height="200"
              loading="lazy"
            />
            <div class="producto__categoria">Prueba</div>
            <button class="producto__carrito" data-id="test-1">
              <i class="fas fa-shopping-cart"></i>
              <span class="sr-only">Agregar al carrito</span>
            </button>
          </div>
          
          <div class="producto__info">
            <h3 class="producto__nombre">Producto de Prueba</h3>
            <p class="producto__descripcion">Esta es una descripción de prueba para el producto.</p>
            <div class="producto__precio">$99.99</div>
          </div>
        </article>
      </div>
    </section>
    
    <!-- Aquí puedes agregar más secciones para probar otros componentes -->
    
  </main>
</BaseLayout>

<style>
  .test-section {
    margin: 2rem 0;
    padding: 1.5rem;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
  }
  
  .test-component {
    margin: 2rem 0;
    padding: 1.5rem;
    background-color: #f9f9f9;
    border-radius: 6px;
  }
  
  .logo-container {
    margin: 1.5rem 0;
    padding: 1rem;
    border: 1px dashed #ddd;
    display: inline-block;
    background: white;
    border-radius: 4px;
  }
  
  h2 {
    color: #333;
    margin-bottom: 1.5rem;
  }
  
  h3 {
    color: #444;
    margin-bottom: 1rem;
  }
</style>
