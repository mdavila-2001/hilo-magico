---
// src/pages/contacto.astro

// Importaciones
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';

// Metadatos para SEO
const tituloPagina = 'Contacto - Hilo Mágico';
const descripcionPagina = 'Contáctanos para consultas, cotizaciones o cualquier pregunta sobre nuestros servicios de costura personalizada.';

// Importar estilos
import '../styles/pages/contacto.scss';
---

<BaseLayout title={tituloPagina} description={descripcionPagina}>
  
  <main>
    <!-- Hero Section -->
    <section class="hero hero--small">
      <div class="contenedor">
        <h1 class="hero__titulo">Contáctanos</h1>
        <p class="hero__subtitulo">Estamos aquí para ayudarte con tus proyectos de costura</p>
      </div>
    </section>
    
    <!-- Sección de Contacto -->
    <section class="seccion">
      <div class="contenedor">
        <div class="contacto-grid">
          <!-- Información de Contacto -->
          <div class="contacto-info">
            <h2 class="seccion__titulo">Información de Contacto</h2>
            <p class="seccion__subtitulo">No dudes en ponerte en contacto con nosotros</p>
            
            <div class="info-item">
              <div class="info-icono">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div class="info-descripcion">
                <h3>Ubicación</h3>
                <p>Santa Cruz de la Sierra, Bolivia</p>
              </div>
            </div>
            
            <div class="info-item">
              <div class="info-icono">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div class="info-descripcion">
                <h3>Teléfono</h3>
                <p><a href="tel:+59162708298">+591 62708298</a></p>
              </div>
            </div>
            
            <div class="info-item">
              <div class="info-icono">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="info-descripcion">
                <h3>Correo Electrónico</h3>
                <p><a href="mailto:hilo.magico.scz@gmail.com">hilo.magico.scz@gmail.com</a></p>
              </div>
            </div>
            
            <div class="redes-sociales">
              <h3>Síguenos</h3>
              <div class="redes-sociales-lista">
                <a href="#" class="red-social" aria-label="Facebook">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                  </svg>
                </a>
                <a href="#" class="red-social" aria-label="Instagram">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                </a>
                <a href="https://www.tiktok.com/@hilo.magico.scz" class="red-social" aria-label="TikTok">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12.53.02C13.84 0 15.14.01 16.44 0c.08 1.53.63 3.09 1.75 4.17 1.12 1.11 2.7 1.62 4.24 1.79v4.03c-1.44-.05-2.89-.35-4.2-.97-.57-.26-1.1-.59-1.62-.93-.01 2.92.01 5.84-.02 8.75-.08 1.4-.54 2.79-1.35 3.94-1.31 1.92-3.58 3.17-5.91 3.21-1.43.08-2.86-.31-4.08-1.03-2.02-1.19-3.44-3.37-3.65-5.71-.02-.5-.03-1-.01-1.49.18-1.9 1.12-3.72 2.58-4.96 1.66-1.44 3.98-2.13 6.15-1.72.02 1.48-.04 2.96-.04 4.44-.99-.32-2.15-.23-3.02.37-.63.41-1.11 1.04-1.36 1.75-.21.51-.15 1.07-.14 1.61.24 1.64 1.82 3.02 3.5 2.87 1.12-.01 2.19-.66 2.77-1.61.19-.33.4-.67.41-1.06.1-1.79.06-3.57.07-5.36.01-4.03-.01-8.05.02-12.07z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Formulario de Contacto -->
          <div class="formulario-contacto">
            <h2 class="seccion__titulo">Envíanos un Mensaje</h2>
            <p class="seccion__subtitulo">Completa el formulario y nos pondremos en contacto contigo</p>
            
            <form class="formulario" id="formularioContacto">
              <div class="campo-formulario">
                <label for="nombre">Nombre completo *</label>
                <input type="text" id="nombre" name="nombre" required>
              </div>
              
              <div class="campo-formulario">
                <label for="email">Correo electrónico *</label>
                <input type="email" id="email" name="email" required>
              </div>
              
              <div class="campo-formulario">
                <label for="asunto">Asunto</label>
                <select id="asunto" name="asunto">
                  <option value="">Selecciona un asunto</option>
                  <option value="cotizacion">Cotización</option>
                  <option value="consulta">Consulta</option>
                  <option value="personalizado">Pedido Personalizado</option>
                  <option value="otro">Otro</option>
                </select>
              </div>
              
              <div class="campo-formulario">
                <label for="mensaje">Mensaje *</label>
                <textarea id="mensaje" name="mensaje" rows="5" required></textarea>
              </div>
              
              <button type="submit" class="boton boton--primario">Enviar Mensaje</button>
            </form>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Mapa -->
    <section class="seccion seccion--mapa">
      <div class="contenedor">
        <h2 class="seccion__titulo">Nuestra Ubicación</h2>
        <div class="mapa">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d423.14015329696207!2d-63.15867474093297!3d-17.760177896829887!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x93f1e7e964b0964b%3A0x111e5b1ebf7cf1a9!2sHilo%20M%C3%A1gico!5e0!3m2!1ses-419!2sbo!4v1751481229554!5m2!1ses-419!2sbo" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" 
            width="100%" 
            height="450" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            aria-label="Mapa de ubicación de Hilo Mágico">
          </iframe>
        </div>
      </div>
    </section>
  </main>
  
  <script>
    document.addEventListener('astro:page-load', () => {
      const formulario = document.getElementById('formularioContacto') as HTMLFormElement;
      
      if (formulario) {
        formulario.addEventListener('submit', (e) => {
          e.preventDefault();
          // Aquí iría la lógica para enviar el formulario
          alert('¡Gracias por tu mensaje! Nos pondremos en contacto contigo pronto.');
          formulario.reset();
        });
      }
    });
  </script>
</BaseLayout>
