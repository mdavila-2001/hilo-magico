---
// src/pages/contacto.astro

// Importaciones
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Metadatos para SEO
const tituloPagina = 'Contacto - Hilo Mágico';
const descripcionPagina = 'Contáctanos para consultas, cotizaciones o cualquier pregunta sobre nuestros servicios de costura personalizada.';

// Importar estilos
import '../styles/pages/contacto.scss';
---

<BaseLayout title={tituloPagina} description={descripcionPagina}>
  <Header />
  
  <main>
    <!-- Hero Section -->
    <section class="hero hero--small">
      <div class="contenedor">
        <h1 class="hero__titulo">Contáctanos</h1>
        <p class="hero__subtitulo">Estamos aquí para ayudarte con tus proyectos de costura</p>
      </div>
    </section>
    
    <!-- Sección de Contacto -->
    <section class="seccion">
      <div class="contenedor">
        <div class="contacto-grid">
          <!-- Información de Contacto -->
          <div class="contacto-info">
            <h2 class="seccion__titulo">Información de Contacto</h2>
            <p class="seccion__subtitulo">No dudes en ponerte en contacto con nosotros</p>
            
            <div class="info-item">
              <div class="info-icono">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div class="info-descripcion">
                <h3>Ubicación</h3>
                <p>Ciudad de México, México</p>
              </div>
            </div>
            
            <div class="info-item">
              <div class="info-icono">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div class="info-descripcion">
                <h3>Teléfono</h3>
                <p><a href="tel:+525512345678">+52 55 1234 5678</a></p>
              </div>
            </div>
            
            <div class="info-item">
              <div class="info-icono">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="info-descripcion">
                <h3>Correo Electrónico</h3>
                <p><a href="mailto:contacto@hilomagico.com">contacto@hilomagico.com</a></p>
              </div>
            </div>
            
            <div class="redes-sociales">
              <h3>Síguenos</h3>
              <div class="redes-sociales-lista">
                <a href="#" class="red-social" aria-label="Facebook">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"></path>
                  </svg>
                </a>
                <a href="#" class="red-social" aria-label="Instagram">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                    <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                    <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
                  </svg>
                </a>
                <a href="#" class="red-social" aria-label="Pinterest">
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 0C5.373 0 0 5.372 0 12c0 5.084 3.163 9.426 7.627 11.174-.105-.949-.2-2.405.042-3.441.218-.937 1.407-5.965 1.407-5.965s-.359-.719-.359-1.782c0-1.668.967-2.914 2.171-2.914 1.023 0 1.518.769 1.518 1.69 0 1.029-.655 2.568-.994 3.995-.283 1.194.599 2.169 1.777 2.169 2.133 0 3.772-2.249 3.772-5.495 0-2.873-2.064-4.882-5.012-4.882-3.414 0-5.418 2.561-5.418 5.207 0 1.031.397 2.138.893 2.738a.36.36 0 0 1 .083.345l-.333 1.36c-.053.22-.174.267-.402.161-1.499-.698-2.436-2.889-2.436-4.649 0-3.785 2.75-7.262 7.929-7.262 4.163 0 7.398 2.967 7.398 6.931 0 4.136-2.607 7.464-6.227 7.464-1.216 0-2.359-.631-2.75-1.378l-.748 2.853c-.271 1.043-1.002 2.35-1.492 3.146 1.124.347 2.317.535 3.554.535 6.627 0 12-5.373 12-12S18.627 0 12 0z"/>
                  </svg>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Formulario de Contacto -->
          <div class="formulario-contacto">
            <h2 class="seccion__titulo">Envíanos un Mensaje</h2>
            <p class="seccion__subtitulo">Completa el formulario y nos pondremos en contacto contigo</p>
            
            <form class="formulario" id="formularioContacto">
              <div class="campo-formulario">
                <label for="nombre">Nombre completo *</label>
                <input type="text" id="nombre" name="nombre" required>
              </div>
              
              <div class="campo-formulario">
                <label for="email">Correo electrónico *</label>
                <input type="email" id="email" name="email" required>
              </div>
              
              <div class="campo-formulario">
                <label for="asunto">Asunto</label>
                <select id="asunto" name="asunto">
                  <option value="">Selecciona un asunto</option>
                  <option value="cotizacion">Cotización</option>
                  <option value="consulta">Consulta</option>
                  <option value="personalizado">Pedido Personalizado</option>
                  <option value="otro">Otro</option>
                </select>
              </div>
              
              <div class="campo-formulario">
                <label for="mensaje">Mensaje *</label>
                <textarea id="mensaje" name="mensaje" rows="5" required></textarea>
              </div>
              
              <button type="submit" class="boton boton--primario">Enviar Mensaje</button>
            </form>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Mapa -->
    <section class="seccion seccion--mapa">
      <div class="contenedor">
        <h2 class="seccion__titulo">Nuestra Ubicación</h2>
        <div class="mapa">
          <iframe 
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15050.85219615017!2d-99.1694856850938!3d19.4326077!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x85d1ff35f5bd1563%3A0x6c366f0e2de02ff7!2sEl%20%C3%81ngel%20de%20la%20Independencia!5e0!3m2!1ses-419!2smx!4v1620000000000!5m2!1ses-419!2smx" 
            width="100%" 
            height="450" 
            style="border:0;" 
            allowfullscreen="" 
            loading="lazy"
            aria-label="Mapa de ubicación de Hilo Mágico">
          </iframe>
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
  
  <script>
    document.addEventListener('astro:page-load', () => {
      const formulario = document.getElementById('formularioContacto') as HTMLFormElement;
      
      if (formulario) {
        formulario.addEventListener('submit', (e) => {
          e.preventDefault();
          // Aquí iría la lógica para enviar el formulario
          alert('¡Gracias por tu mensaje! Nos pondremos en contacto contigo pronto.');
          formulario.reset();
        });
      }
    });
  </script>
</BaseLayout>
