---
// src/components/Hero.astro

// Datos del héroe
const titulo = 'Hilo Mágico';
const subtitulo = 'Donde tus sueños de moda se hacen realidad';
const textoBoton = 'Descubre nuestros servicios';
const imagenFondo = '/hero-bg.jpg';
---

<section class="hero">
  <div class="contenedor hero__contenedor">
    <div class="hero__texto">
      <h1 class="hero__titulo">{titulo}</h1>
      <p class="hero__subtitulo">{subtitulo}</p>
      <a href="#servicios" class="hero__boton">
        {textoBoton}
        <svg class="hero__icono" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 14l-7 7m0 0l-7-7m7 7V3" />
        </svg>
      </a>
    </div>
    <div class="hero__imagen">
      <img src="/img/hero-illustration.svg" alt="Ilustración de costura y moda" width="500" height="400" />
    </div>
  </div>
  
  <div class="hero__ola">
    <svg viewBox="0 0 1440 100" preserveAspectRatio="none">
      <path d="M0,0 C150,50 350,100 600,80 C850,60 1050,10 1200,30 C1350,50 1440,100 1440,100 L1440,0 L0,0 Z" fill="currentColor" />
    </svg>
  </div>
</section>

<style>
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;
  
  .hero {
    position: relative;
    background: linear-gradient(135deg, $color-lavanda 0%, lighten($color-lavanda, 10%) 100%);
    color: $color-violeta-oscuro;
    padding: 8rem 0 5rem;
    overflow: hidden;
    
    @include tablet {
      padding: 10rem 0 7rem;
    }
  }
  
  .hero__contenedor {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    
    @include tablet {
      flex-direction: row;
      text-align: left;
      align-items: center;
      justify-content: space-between;
    }
  }
  
  .hero__texto {
    max-width: 600px;
    margin-bottom: 2rem;
    
    @include tablet {
      flex: 1;
      margin-bottom: 0;
      padding-right: 2rem;
    }
  }
  
  .hero__titulo {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    color: $color-violeta-oscuro;
    line-height: 1.2;
    
    @include tablet {
      font-size: 3rem;
    }
    
    @include escritorio {
      font-size: 3.5rem;
    }
  }
  
  .hero__subtitulo {
    font-size: 1.25rem;
    margin-bottom: 2rem;
    color: darken($color-lavanda, 40%);
    font-family: $fuente-secundaria;
    font-weight: 500;
    
    @include tablet {
      font-size: 1.5rem;
    }
  }
  
  .hero__boton {
    @include boton($color-violeta-oscuro, $color-blanco-calido);
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-top: 1rem;
    padding: 0.8rem 1.8rem;
    font-size: 1rem;
    
    &:hover {
      transform: translateY(-3px);
      box-shadow: 0 6px 15px rgba($color-violeta-oscuro, 0.2);
    }
    
    &:active {
      transform: translateY(0);
    }
  }
  
  .hero__icono {
    width: 1.2rem;
    height: 1.2rem;
    animation: flotar 2s ease-in-out infinite;
  }
  
  .hero__imagen {
    flex: 1;
    max-width: 500px;
    margin-top: 2rem;
    
    @include tablet {
      margin-top: 0;
    }
    
    img {
      width: 100%;
      height: auto;
      filter: drop-shadow(0 10px 20px rgba($color-violeta-oscuro, 0.2));
      animation: flotar 6s ease-in-out infinite;
    }
  }
  
  .hero__ola {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    color: $color-blanco-calido;
    
    svg {
      width: 100%;
      height: 80px;
      
      @include tablet {
        height: 100px;
      }
    }
  }
  
  @keyframes flotar {
    0%, 100% {
      transform: translateY(0);
    }
    50% {
      transform: translateY(-10px);
    }
  }
</style>
