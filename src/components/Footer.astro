---
// src/components/Footer.astro

// Datos de contacto y enlaces
const informacionContacto = {
  telefono: '+1 234 567 890',
  email: 'hola@hilomagico.com',
  direccion: 'Calle de la Costura, 123, Ciudad',
  horario: 'Lun-Vie: 9:00 - 18:00'
};

const enlacesRapidos = [
  { texto: 'Inicio', url: '/' },
  { texto: 'Servicios', url: '#servicios' },
  { texto: 'Galería', url: '#galeria' },
  { texto: 'Sobre Nosotros', url: '#nosotros' },
  { texto: 'Contacto', url: '#contacto' },
];

const redesSociales = [
  { nombre: 'Instagram', icono: 'instagram', url: '#' },
  { nombre: 'Facebook', icono: 'facebook', url: '#' },
  { nombre: 'Pinterest', icono: 'pinterest', url: '#' },
  { nombre: 'WhatsApp', icono: 'whatsapp', url: '#' },
];
---

<footer class="footer">
  <div class="contenedor">
    <div class="footer__contenido">
      <!-- Columna 1: Logo y descripción -->
      <div class="footer__columna">
        <div class="footer__logo">
          <img src="/logo-hilo-magico.png" alt="Hilo Mágico" width="180" height="60" />
        </div>
        <p class="footer__descripcion">
          Creando prendas únicas y personalizadas que cuentan tu historia, puntada a puntada.
        </p>
        <div class="footer__redes">
          {redesSociales.map(red => (
            <a 
              href={red.url} 
              class="footer__red" 
              aria-label={red.nombre}
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="fab fa-{red.icono}" aria-hidden="true"></span>
            </a>
          ))}
        </div>
      </div>
      
      <!-- Columna 3: Información de contacto -->
      <div class="footer__columna">
        <h3 class="footer__titulo">Contacto</h3>
        <address class="footer__contacto">
          <div class="footer__contacto-item">
            <i class="fas fa-map-marker-alt" aria-hidden="true"></i>
            <span>{informacionContacto.direccion}</span>
          </div>
          <div class="footer__contacto-item">
            <i class="fas fa-phone-alt" aria-hidden="true"></i>
            <a href={`tel:${informacionContacto.telefono.replace(/\s+/g, '')}`}>
              {informacionContacto.telefono}
            </a>
          </div>
          <div class="footer__contacto-item">
            <i class="fas fa-envelope" aria-hidden="true"></i>
            <a href={`mailto:${informacionContacto.email}`}>
              {informacionContacto.email}
            </a>
          </div>
          <div class="footer__contacto-item">
            <i class="far fa-clock" aria-hidden="true"></i>
            <span>{informacionContacto.horario}</span>
          </div>
        </address>
      </div>
    </div>
    
    <!-- Línea divisoria -->
    <div class="footer__divisor"></div>
    
    <!-- Copyright -->
    <div class="footer__base">
      <p class="footer__copyright">
        &copy; {new Date().getFullYear()} Hilo Mágico. Todos los derechos reservados.
      </p>
      <div class="footer__enlaces-legales">
        <a href="#" class="footer__enlace-legal">Términos y condiciones</a>
        <span class="footer__separador">|</span>
        <a href="#" class="footer__enlace-legal">Política de privacidad</a>
      </div>
    </div>
  </div>
</footer>

<style>
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;
  
  .footer {
    background-color: $color-violeta-oscuro;
    color: $color-blanco-calido;
    padding: 4rem 0 0;
    position: relative;
    
    &::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 10px;
      background: linear-gradient(90deg, $color-lavanda, lighten($color-lavanda, 20%));
    }
  }
  
  .footer__contenido {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    margin-bottom: 3rem;
    
    @include tablet {
      grid-template-columns: repeat(2, 1fr);
    }
    
    @include escritorio {
      grid-template-columns: 2fr 1fr 1.5fr;
    }
  }
  
  .footer__columna {
    &:first-child {
      @include escritorio {
        padding-right: 2rem;
      }
    }
  }
  
  .footer__logo {
    margin-bottom: 1.5rem;
    
    img {
      height: 50px;
      width: auto;
      filter: brightness(0) invert(1);
    }
  }
  
  .footer__descripcion {
    color: rgba($color-blanco-calido, 0.8);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }
  
  .footer__redes {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .footer__red {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: rgba($color-blanco-calido, 0.1);
    color: $color-blanco-calido;
    font-size: 1.2rem;
    transition: all 0.3s ease;
    
    &:hover {
      background-color: $color-lavanda;
      color: $color-violeta-oscuro;
      transform: translateY(-3px);
    }
  }
  
  .footer__titulo {
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    position: relative;
    padding-bottom: 0.8rem;
    color: $color-blanco-calido;
    
    &::after {
      content: '';
      position: absolute;
      bottom: 0;
      left: 0;
      width: 50px;
      height: 2px;
      background-color: $color-lavanda;
    }
  }
  
  .footer__menu {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer__menu-item {
    margin-bottom: 0.8rem;
  }
  
  .footer__enlace {
    color: rgba($color-blanco-calido, 0.8);
    text-decoration: none;
    transition: color 0.3s ease, padding-left 0.3s ease;
    display: inline-block;
    
    &:hover {
      color: $color-lavanda;
      padding-left: 5px;
    }
  }
  
  .footer__contacto {
    font-style: normal;
    margin: 0;
    padding: 0;
  }
  
  .footer__contacto-item {
    display: flex;
    align-items: flex-start;
    margin-bottom: 1.2rem;
    color: rgba($color-blanco-calido, 0.8);
    line-height: 1.5;
    
    i {
      margin-right: 1rem;
      color: $color-lavanda;
      width: 20px;
      text-align: center;
      margin-top: 0.2rem;
    }
    
    a {
      color: inherit;
      text-decoration: none;
      transition: color 0.3s ease;
      
      &:hover {
        color: $color-lavanda;
      }
    }
  }
  
  .footer__divisor {
    height: 1px;
    background-color: rgba($color-blanco-calido, 0.1);
    margin: 2rem 0;
  }
  
  .footer__base {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    padding: 1.5rem 0;
    
    @include tablet {
      flex-direction: row;
      justify-content: space-between;
      text-align: left;
    }
  }
  
  .footer__copyright {
    color: rgba($color-blanco-calido, 0.6);
    font-size: 0.9rem;
    margin: 0 0 1rem 0;
    
    @include tablet {
      margin-bottom: 0;
    }
  }
  
  .footer__enlaces-legales {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.85rem;
  }
  
  .footer__enlace-legal {
    color: rgba($color-blanco-calido, 0.6);
    text-decoration: none;
    transition: color 0.3s ease;
    
    &:hover {
      color: $color-lavanda;
    }
  }
  
  .footer__separador {
    color: rgba($color-blanco-calido, 0.3);
  }
  
  /* Estilos para Font Awesome */
  .fab, .fas, .far {
    font-style: normal;
    font-weight: 400;
    font-family: 'Font Awesome 5 Free';
  }
  
  .fab {
    font-family: 'Font Awesome 5 Brands';
  }
  
  .fa-facebook-f:before { content: '\f39e'; }
  .fa-instagram:before { content: '\f16d'; }
  .fa-pinterest-p:before { content: '\f1d8'; }
  .fa-whatsapp:before { content: '\f232'; }
  .fa-map-marker-alt:before { content: '\f3c5'; }
  .fa-phone-alt:before { content: '\f879'; }
  .fa-envelope:before { content: '\f0e0'; }
  .fa-clock:before { content: '\f017'; }
</style>

<!-- Incluimos Font Awesome para los iconos -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" crossorigin="anonymous" referrerpolicy="no-referrer" />
