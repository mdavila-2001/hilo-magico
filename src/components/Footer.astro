      display: flex;
      align-items: center;
      color: $color-blanco-calido;
      text-decoration: none;
      transition: transform 0.3s ease;

      &:hover {
        transform: translateY(-2px);
        color: $color-rosa-claro;
      }
    }

    &__social-icon {
      font-size: 1.5rem;
      margin-right: $spacing-xs;
    }

    &__copyright {
      text-align: center;
      border-top: 1px solid rgba($color-blanco-calido, 0.2);
      padding-top: $spacing-lg;
      font-size: 0.9rem;
      color: rgba($color-blanco-calido, 0.8);
    }
  }
