---
import { Icon } from 'astro-icon/components';

const redesSociales = [
  {
    nombre: 'Instagram',
    url: '#',
    icono: 'simple-icons:instagram'
  },
  {
    nombre: 'Facebook',
    url: '#',
    icono: 'simple-icons:facebook'
  },
  {
    nombre: 'WhatsApp',
    url: '#',
    icono: 'simple-icons:whatsapp'
  }
];
---

<footer class="footer">
  <div class="container">
    <div class="footer__content">
      <div class="footer__contacto">
        <h4>Contáctanos</h4>
        <a href="mailto:info@hilomagico.com" class="footer__email">info@hilomagico.com</a>
      </div>
      <div class="footer__social">
        <h4>Síguenos</h4>
        <div class="footer__social-links">
          {redesSociales.map(red => (
            <a href={red.url} class="footer__social-link" target="_blank" rel="noopener noreferrer">
              <span class="footer__social-icon"><Icon name={red.icono} /></span>
              <span class="footer__social-name">{red.nombre}</span>
            </a>
          ))}
        </div>
      </div>
    </div>
    <div class="footer__copyright">
      <p>&copy; {new Date().getFullYear()} Hilo Mágico. Todos los derechos reservados.</p>
    </div>
  </div>
</footer>

<style lang="scss">
  @use '../styles/components/footer.scss';
</style>