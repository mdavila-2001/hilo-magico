<section class="servicios" id="servicios">
  <div class="container">
    <h2 class="servicios__titulo">Nuestros Servicios</h2>
    <div class="servicios__grid">
      {servicios.map(servicio => (
        <div class="servicios__card">
          <div class="servicios__emoji">{servicio.emoji}</div>
          <h3 class="servicios__card-titulo">{servicio.titulo}</h3>
          <p class="servicios__descripcion">{servicio.descripcion}</p>
        </div>
      ))}
    </div>
  </div>
</section>

<style lang="scss">
  @use '../styles/variables' as *;
  @use '../styles/mixins' as *;

  .servicios {
    @include section-padding;
    background-color: $color-blanco-calido;

    &__titulo {
      text-align: center;
      color: $color-violeta;
      margin-bottom: $spacing-xl;
    }

    &__grid {
      display: grid;
      grid-template-columns: repeat(1, 1fr);
      gap: $spacing-lg;
      
      @include tablet {
        grid-template-columns: repeat(2, 1fr);
      }
      
      @include desktop {
        grid-template-columns: repeat(4, 1fr);
      }
    }

    &__card {
      @include card;
      text-align: center;
      transition: transform 0.3s ease;

      &:hover {
        transform: translateY(-5px);
      }
    }

    &__emoji {
      font-size: 3rem;
      margin-bottom: $spacing-sm;
    }

    &__card-titulo {
      color: $color-violeta;
      font-size: 1.25rem;
      margin-bottom: $spacing-sm;
    }

    &__descripcion {
      font-size: 0.9rem;
      color: rgba(0, 0, 0, 0.7);
      margin-bottom: 0;
    }
  }
</style>