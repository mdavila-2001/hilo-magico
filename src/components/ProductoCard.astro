---
// src/components/ProductoCard.astro

interface Producto {
  id: string;
  nombre: string;
  descripcion: string;
  precio: number;
  imagen: string;
  categoria: string;
}

const { producto } = Astro.props;

// Función para formatear el precio
const formatearPrecio = (precio: number) => {
  return new Intl.NumberFormat('es-MX', {
    style: 'currency',
    currency: 'MXN',
    minimumFractionDigits: 2
  }).format(precio);
};
---

<article class="producto">
  <div class="producto__imagen-contenedor">
    <img 
      src={producto.imagen} 
      alt={producto.nombre} 
      class="producto__imagen"
      width="300"
      height="200"
      loading="lazy"
    />
    <div class="producto__categoria">{producto.categoria}</div>
    <button class="producto__carrito" data-id={producto.id} data-nombre={producto.nombre} data-precio={producto.precio} data-imagen={producto.imagen}>
      <i class="fas fa-shopping-cart"></i>
      <span class="sr-only">Agregar al carrito</span>
    </button>
  </div>
  
  <div class="producto__info">
    <h3 class="producto__nombre">{producto.nombre}</h3>
    <p class="producto__descripcion">{producto.descripcion}</p>
    <div class="producto__precio">{formatearPrecio(producto.precio)}</div>
  </div>
</article>

<style>
  .producto {
    background: white;
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  
  .producto:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
  }
  
  .producto__imagen-contenedor {
    position: relative;
    padding-top: 66.67%; /* Relación de aspecto 3:2 */
    overflow: hidden;
  }
  
  .producto__imagen {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .producto:hover .producto__imagen {
    transform: scale(1.05);
  }
  
  .producto__categoria {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: rgba(255, 255, 255, 0.9);
    color: $color-violeta-oscuro;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  .producto__carrito {
    position: absolute;
    bottom: 15px;
    right: 15px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: $color-lavanda;
    color: $color-violeta-oscuro;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transform: translateY(10px);
    transition: all 0.3s ease;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
  }
  
  .producto:hover .producto__carrito {
    opacity: 1;
    transform: translateY(0);
  }
  
  .producto__carrito:hover {
    background-color: darken($color-lavanda, 10%);
    transform: translateY(-2px) scale(1.1);
  }
  
  .producto__info {
    padding: 1.25rem;
    flex: 1;
    display: flex;
    flex-direction: column;
  }
  
  .producto__nombre {
    margin: 0 0 0.5rem 0;
    color: $color-violeta-oscuro;
    font-size: 1.1rem;
    font-weight: 600;
  }
  
  .producto__descripcion {
    color: $color-gris-oscuro;
    font-size: 0.9rem;
    margin: 0 0 1rem 0;
    flex-grow: 1;
  }
  
  .producto__precio {
    color: $color-violeta-oscuro;
    font-weight: 700;
    font-size: 1.25rem;
    margin-top: auto;
  }
</style>
