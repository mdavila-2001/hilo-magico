  { name: 'Productos', href: '/admin/products', icon: 'fas fa-box' },
  { name: 'Pedidos', href: '/admin/orders', icon: 'fas fa-shopping-bag' },
  { name: 'Clientes', href: '/admin/customers', icon: 'fas fa-users' },
  { name: 'Reseñas', href: '/admin/reviews', icon: 'fas fa-star' },
