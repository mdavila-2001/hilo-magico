---
// src/layouts/admin/AdminLayout.astro
import '../../styles/admin/main.scss';

interface Props {
  title: string;
  description?: string;
  currentPage?: string;
  extraHead?: string;
}

const { title, description = 'Panel de administración', currentPage = '' } = Astro.props;

const navigation = [
  { name: 'Dashboard', href: '/admin', icon: 'fas fa-home', current: currentPage === 'dashboard' },
  { name: 'Pedidos', href: '/admin/orders', icon: 'fas fa-box', current: currentPage === 'orders' },
  { name: 'Productos', href: '/admin/products', icon: 'fas fa-tshirt', current: currentPage === 'products' },
  { name: 'Clientes', href: '/admin/clients', icon: 'fas fa-users', current: currentPage === 'clients' },
  { name: 'Configuración', href: '/admin/settings', icon: 'fas fa-cog', current: currentPage === 'settings' },
];

const userNavigation = [
  { name: 'Tu perfil', href: '#', icon: 'fas fa-user' },
  { name: 'Configuración', href: '#', icon: 'fas fa-cog' },
  { name: 'Cerrar sesión', href: '#', icon: 'fas fa-sign-out-alt', isLogout: true },
];
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title} | Panel de Administración</title>
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  </head>
  
  <body>
    <div class="admin-layout">
      <!-- Barra lateral para móviles -->
      <div id="mobile-menu" class="mobile-menu">
        <div id="mobile-menu-backdrop" class="mobile-menu-backdrop"></div>
        <div class="mobile-menu-content">
          <div class="mobile-menu-close">
            <button type="button" id="close-sidebar" class="mobile-menu-close-btn">
              <span class="sr-only">Cerrar menú</span>
              <i class="fas fa-times"></i>
            </button>
          </div>
          <div class="mobile-menu-header">
            <h1 class="mobile-menu-title">Hilo Mágico</h1>
          </div>
          <nav class="mobile-menu-nav">
            {navigation.map((item) => (
              <a
                href={item.href}
                class={`mobile-menu-item ${item.current ? 'active' : ''}`}
              >
                <i class={item.icon}></i>
                {item.name}
              </a>
            ))}
          </nav>
          <div class="mobile-menu-user">
            <div class="mobile-menu-user-info">
              <div class="mobile-menu-user-avatar">
                <i class="fas fa-user text-gray-600"></i>
              </div>
              <div class="mobile-menu-user-details">
                <div class="mobile-menu-user-name">Juan Pérez</div>
                <div class="mobile-menu-user-role">admin</div>
              </div>
            </div>
            <div class="mobile-menu-user-nav">
              {userNavigation.map((item) => (
                <a href={item.href} class="mobile-menu-user-link">
                  {item.name}
                </a>
              ))}
            </div>
          </div>
        </div>
      </div>

      <!-- Barra lateral estática para escritorio -->
      <div class="sidebar">
        <div class="sidebar-header">
          <h1 class="sidebar-title">Hilo Mágico</h1>
        </div>
        <nav class="sidebar-nav">
          {navigation.map((item) => (
            <a
              href={item.href}
              class={`nav-item ${item.current ? 'active' : ''}`}
            >
              <i class={item.icon}></i>
              {item.name}
            </a>
          ))}
        </nav>
        <div class="sidebar-user">
          <div class="sidebar-user-info">
            <div class="sidebar-user-avatar">
              <i class="fas fa-user text-gray-600"></i>
            </div>
            <div class="sidebar-user-details">
              <div class="sidebar-user-name">Juan Pérez</div>
              <a href="/admin/profile" class="sidebar-user-profile-link">Ver perfil</a>
            </div>
          </div>
          <div class="sidebar-user-nav">
            {userNavigation.map((item) => (
              <a href={item.href} class="sidebar-user-link" data-logout={item.isLogout}>
                {item.name}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Contenido principal -->
      <div class="main-content">
        <!-- Barra superior -->
        <div class="top-bar">
          <button
            type="button"
            id="open-sidebar"
            class="top-bar-btn"
          >
            <span class="sr-only">Abrir menú</span>
            <i class="fas fa-bars"></i>
          </button>
          <div class="top-bar-search">
            <div class="relative w-full text-gray-400 focus-within:text-gray-600">
              <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fas fa-search h-5 w-5"></i>
              </div>
              <input
                id="search-field"
                class="block w-full bg-white py-2 pl-10 pr-3 border border-transparent rounded-md leading-5 text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:text-sm"
                placeholder="Buscar"
                type="search"
                name="search"
              />
            </div>
          </div>
          <div class="top-bar-user">
            <button
              type="button"
              id="user-menu-button"
              class="top-bar-btn"
              aria-expanded="false"
              aria-haspopup="true"
            >
              <span class="sr-only">Abrir menú de usuario</span>
              <div class="h-8 w-8 rounded-full bg-gray-200 flex items-center justify-center">
                <i class="fas fa-user text-gray-600"></i>
              </div>
              <span class="ml-2 hidden md:block text-sm font-medium text-gray-700">
                Juan Pérez
              </span>
              <i class="fas fa-chevron-down ml-1 text-gray-400"></i>
            </button>
            <div
              id="user-menu"
              class="user-menu-dropdown"
              role="menu"
              aria-orientation="vertical"
              aria-labelledby="user-menu-button"
              tabindex="-1"
            >
              {userNavigation.map((item, index) => {
                const className = `block px-4 py-2 text-sm ${item.isLogout ? 'text-red-600 hover:bg-red-50' : 'text-gray-700 hover:bg-gray-100'}`;
                return (
                  <a
                    data-astro-source-file={`${index}`}
                    href={item.href}
                    class={className}
                    role="menuitem"
                    data-logout={item.isLogout ? 'true' : undefined}
                  >
                    {item.icon && <i class={`${item.icon} w-5 mr-2`}></i>}
                    {item.name}
                  </a>
                );
              })}
            </div>
          </div>
        </div>

        <!-- Contenido de la página -->
        <main class="flex-1 pb-8">
          <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="py-6">
              <slot />
            </div>
          </div>
        </main>
      </div>
    </div>

    <!-- Scripts de Alpine.js -->
    <script is:inline>
      // Scripts específicos del panel de administración
      document.addEventListener('DOMContentLoaded', () => {
        // Elementos del menú móvil
        const mobileMenu = document.getElementById('mobile-menu');
        const openButton = document.getElementById('open-sidebar');
        const closeButton = document.getElementById('close-sidebar');
        const backdrop = document.getElementById('mobile-menu-backdrop');
        const userMenuButton = document.getElementById('user-menu-button');
        const userMenu = document.getElementById('user-menu');
        
        // Función para alternar el menú móvil
        function toggleMenu(show) {
          if (!mobileMenu) return;
          
          if (show) {
            mobileMenu.classList.remove('hidden');
            mobileMenu.style.display = 'flex';
            document.body.style.overflow = 'hidden';
          } else {
            mobileMenu.classList.add('hidden');
            mobileMenu.style.display = 'none';
            document.body.style.overflow = '';
          }
        }
        
        // Event listeners para el menú móvil
        if (openButton) {
          openButton.addEventListener('click', () => toggleMenu(true));
        }
        
        if (closeButton) {
          closeButton.addEventListener('click', () => toggleMenu(false));
        }
        
        if (backdrop) {
          backdrop.addEventListener('click', () => toggleMenu(false));
        }
        
        // Toggle user menu
        if (userMenuButton && userMenu) {
          userMenuButton.addEventListener('click', (e) => {
            e.stopPropagation();
            const expanded = userMenuButton.getAttribute('aria-expanded') === 'true';
            userMenuButton.setAttribute('aria-expanded', (!expanded).toString());
            userMenu.classList.toggle('hidden');
          });
          
          // Cerrar menú al hacer clic fuera
          document.addEventListener('click', (e) => {
            const target = e.target;
            if (userMenuButton && userMenu && 
                !userMenuButton.contains(target) && 
                !userMenu.contains(target)) {
              userMenu.classList.add('hidden');
              userMenuButton.setAttribute('aria-expanded', 'false');
            }
          });
        }
        
        // Manejar el cierre de sesión
        const logoutButtons = document.querySelectorAll('[data-logout]');
        const logoutModal = document.getElementById('logout-modal');
        const confirmLogout = document.getElementById('confirm-logout');
        
        if (logoutButtons.length && logoutModal && confirmLogout) {
          // Mostrar modal al hacer clic en Cerrar sesión
          logoutButtons.forEach(button => {
            button.addEventListener('click', (e) => {
              e.preventDefault();
              logoutModal.classList.remove('hidden');
              
              // Cerrar menú de usuario si está abierto
              if (userMenu) {
                userMenu.classList.add('hidden');
              }
            });
          });
          
          // Cerrar modal al hacer clic fuera
          logoutModal.addEventListener('click', (e) => {
            if (e.target === logoutModal) {
              logoutModal.classList.add('hidden');
            }
          });
          
          // Confirmar cierre de sesión
          confirmLogout.addEventListener('click', () => {
            window.location.href = '/auth/logout';
          });
        }
      });
    </script>
    
    <!-- Modal de confirmación de cierre de sesión -->
    <div id="logout-modal" class="hidden fixed inset-0 z-50">
      <div class="modal-overlay">
        <div class="modal-content">
          <div class="modal-header">
            <h3 class="text-lg font-medium text-gray-900">Cerrar sesión</h3>
            <button class="modal-close" onclick="document.getElementById('logout-modal').classList.add('hidden')">
              <i class="fas fa-times"></i>
            </button>
          </div>
          <div class="modal-body">
            <p>¿Estás seguro de que deseas cerrar la sesión?</p>
          </div>
          <div class="modal-footer">
            <button class="btn btn-secondary" onclick="document.getElementById('logout-modal').classList.add('hidden')">
              Cancelar
            </button>
            <a href="/auth/logout" class="btn btn-primary">
              Sí, cerrar sesión
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <style>
      .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background-color: rgba(0, 0, 0, 0.5);
        display: flex;
        justify-content: center;
        align-items: center;
        z-index: 2000;
      }
      
      .modal-content {
        background: white;
        border-radius: 12px;
        width: 90%;
        max-width: 450px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
        overflow: hidden;
      }
      
      .modal-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1.25rem 1.5rem;
        border-bottom: 1px solid #e5e7eb;
      }
      
      .modal-body {
        padding: 1.5rem;
      }
      
      .modal-footer {
        display: flex;
        justify-content: flex-end;
        gap: 0.75rem;
        padding: 1rem 1.5rem;
        background: #f9fafb;
        border-top: 1px solid #e5e7eb;
      }
      
      .btn {
        padding: 0.5rem 1.25rem;
        border-radius: 6px;
        font-weight: 500;
        font-size: 0.95rem;
        cursor: pointer;
        transition: all 0.2s ease;
        border: 1px solid transparent;
      }
      
      .btn-secondary {
        background: #e5e7eb;
        color: #4b5563;
      }
      
      .btn-primary {
        background: #f3e8ff;
        color: #4c1d95;
        font-weight: 600;
      }
      
      .btn:hover {
        opacity: 0.9;
      }
      
      .modal-close {
        background: none;
        border: none;
        font-size: 1.25rem;
        color: #6b7280;
        cursor: pointer;
        padding: 0.25rem;
        border-radius: 50%;
        width: 32px;
        height: 32px;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      
      .modal-close:hover {
        background: rgba(0, 0, 0, 0.05);
      }
    </style>
  </body>
</html>
