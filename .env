# ===================================
# Configuración de la Aplicación
# ===================================
NODE_ENV=development
PUBLIC_SITE_URL=http://localhost:4322

# ===================================
# Autenticación JWT
# ===================================
JWT_SECRET=tu_jwt_secret_seguro
JWT_EXPIRES_IN=7d

# ===================================
# Backend API (Tu servidor de autenticación)
# ===================================
BACKEND_API_URL=http://localhost:8000/api/v1
BACKEND_API_TIMEOUT=10000  # 10 segundos
BACKEND_API_RETRY_ATTEMPTS=3

# ===================================
# DeepSeek Chat (a través de OpenRouter)
# ===================================
DEEPSEEK_API_KEY=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
DEEPSEEK_API_URL=https://openrouter.ai/api/v1/chat/completions
